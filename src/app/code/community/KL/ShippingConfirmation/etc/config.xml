<?xml version="1.0"?>
<config>
    <modules>
        <KL_ShippingConfirmation>
            <version>1.0.0</version>
        </KL_ShippingConfirmation>
    </modules>
    <global>
        <helpers>
            <shippingconfirmation>
                <class>KL_ShippingConfirmation_Helper</class>
            </shippingconfirmation>
        </helpers>
        <models>
            <shippingconfirmation>
                <class>KL_ShippingConfirmation_Model</class>
            </shippingconfirmation>
        </models>
    </global>
    <crontab>
        <jobs>
            <shippingconfirmation>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>shippingconfirmation/cron::sendEmails</model>
                </run>
            </shippingconfirmation>
        </jobs>
    </crontab>
    <default>
        <sales_email>
            <shipment>
                <shippingconfirmation_is_active>0</shippingconfirmation_is_active>
            </shipment>
        </sales_email>
    </default>
</config>
